    <script>
        // --- DATA ---
        
        // Level 1: Standard ions.
        const poolLevel1 = [
            { n: "Ammonium ion", s: "NH‚ÇÑ‚Å∫" }, { n: "Sodium ion", s: "Na‚Å∫" }, { n: "Potassium ion", s: "K‚Å∫" }, 
            { n: "Magnesium ion", s: "Mg¬≤‚Å∫" }, { n: "Calcium ion", s: "Ca¬≤‚Å∫" }, { n: "Zinc ion", s: "Zn¬≤‚Å∫" },
            { n: "Aluminium ion", s: "Al¬≥‚Å∫" }, { n: "Nitrate ion", s: "NO‚ÇÉ‚Åª" }, { n: "Dichromate ion", s: "Cr‚ÇÇO‚Çá¬≤‚Åª" },
            { n: "Chromate ion", s: "CrO‚ÇÑ¬≤‚Åª" }, { n: "Sulphate ion", s: "SO‚ÇÑ¬≤‚Åª" }, { n: "Carbonate ion", s: "CO‚ÇÉ¬≤‚Åª" }, 
            { n: "Hydroxide ion", s: "OH‚Åª" }, { n: "Chloride ion", s: "Cl‚Åª" }, { n: "Oxide ion", s: "O¬≤‚Åª" }
        ];

        // Level 2: Polyatomic/Multivalent. Added Cyanide. No organic. Updated spellings.
        const poolLevel2 = [
            { n: "Iron(II) ion", s: "Fe¬≤‚Å∫" }, { n: "Iron(III) ion", s: "Fe¬≥‚Å∫" }, { n: "Copper(II) ion", s: "Cu¬≤‚Å∫" },
            { n: "Lead(II) ion", s: "Pb¬≤‚Å∫" }, { n: "Permanganate ion", s: "MnO‚ÇÑ‚Åª" }, { n: "Phosphate ion", s: "PO‚ÇÑ¬≥‚Åª" }, 
            { n: "Sulphite ion", s: "SO‚ÇÉ¬≤‚Åª" }, { n: "Hydrogencarbonate ion", s: "HCO‚ÇÉ‚Åª" }, { n: "Hydrogensulphate ion", s: "HSO‚ÇÑ‚Åª" },
            { n: "Nitrite ion", s: "NO‚ÇÇ‚Åª" }, { n: "Barium ion", s: "Ba¬≤‚Å∫" }, { n: "Bromide ion", s: "Br‚Åª" }, 
            { n: "Iodide ion", s: "I‚Åª" }, { n: "Silver ion", s: "Ag‚Å∫" }, { n: "Fluoride ion", s: "F‚Åª" },
            { n: "Cyanide ion", s: "CN‚Åª" }
        ];

        // Level 3: Mostly Polyatomic. 
        const polyatomicPool = [
            poolLevel1[0], poolLevel1[7], poolLevel1[8], poolLevel1[9], poolLevel1[10], poolLevel1[11], poolLevel1[12], // L1 Poly
            poolLevel2[4], poolLevel2[5], poolLevel2[6], poolLevel2[7], poolLevel2[8], poolLevel2[9], poolLevel2[15]  // L2 Poly
        ];
        
        // Add some challenging monoatomic to fill
        const poolLevel3 = [
            ...polyatomicPool,
            { n: "Nitride ion", s: "N¬≥‚Åª" },
            { n: "Oxide ion", s: "O¬≤‚Åª" },
            { n: "Aluminium ion", s: "Al¬≥‚Å∫" },
            { n: "Lead(II) ion", s: "Pb¬≤‚Å∫" }
        ];

        // Config
        const QUESTIONS_PER_ROUND = 12;

        let currentQuestions = [];
        let selectedSymbolCard = null;
        let timerInterval;
        let seconds = 0;
        let userData = {};
        let attemptCount = 1;
        let currentLevel = 1;
        let sessionHistory = []; 

        function startGame(level) {
            if (!document.getElementById('stu-name').value || !document.getElementById('class-no').value) 
                return alert("Please fill in your details!");
            
            // Lock in details if not set
            if(!userData.name) {
                userData.name = document.getElementById('stu-name').value;
                userData.class = document.getElementById('class-select').value;
                userData.no = document.getElementById('class-no').value;
                const dateOptions = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' };
                userData.date = new Date().toLocaleDateString('en-GB', dateOptions);
            }

            currentLevel = level;
            
            document.getElementById('auth-screen').classList.add('hidden');
            document.getElementById('game-screen').classList.remove('hidden');
            
            document.getElementById('display-user').innerText = `${userData.name} (${userData.class} ${userData.no})`;
            document.getElementById('display-date').innerText = userData.date;
            document.getElementById('display-attempt').innerText = attemptCount;

            // Pick 12 random questions
            let pool = (level === 1) ? [...poolLevel1] : (level === 2) ? [...poolLevel2] : [...poolLevel3];
            currentQuestions = pool.sort(() => Math.random() - 0.5).slice(0, QUESTIONS_PER_ROUND);

            initGame();
            startTimer();
        }

        function replayLevel() {
            attemptCount++;
            seconds = 0;
            document.getElementById('display-timer').innerText = "00:00";
            document.getElementById('result-screen').classList.add('hidden');
            document.getElementById('game-screen').classList.remove('hidden');
            document.getElementById('display-attempt').innerText = attemptCount;

            let pool = (currentLevel === 1) ? [...poolLevel1] : (currentLevel === 2) ? [...poolLevel2] : [...poolLevel3];
            currentQuestions = pool.sort(() => Math.random() - 0.5).slice(0, QUESTIONS_PER_ROUND);
            
            initGame();
            startTimer();
        }

        function returnToMenu() {
            clearInterval(timerInterval);
            document.getElementById('restart-modal').classList.add('hidden');
            document.getElementById('game-screen').classList.add('hidden');
            document.getElementById('result-screen').classList.add('hidden');
            document.getElementById('auth-screen').classList.remove('hidden');
            
            // Keep user details filled
            document.getElementById('stu-name').value = userData.name;
            document.getElementById('class-select').value = userData.class;
            document.getElementById('class-no').value = userData.no;
        }

        function logAttempt(result, scoreStr) {
            sessionHistory.push({
                level: currentLevel,
                attempt: attemptCount,
                result: result,
                score: scoreStr,
                time: document.getElementById('display-timer').innerText
            });
            attemptCount++; 
        }

        function initGame() {
            document.getElementById('match-game-grid').classList.add('hidden');
            document.getElementById('spell-game-grid').classList.add('hidden');
            document.getElementById('beaker-liquid').style.height = "0%";
            document.getElementById('beaker-percent').innerText = "0%";

            if (currentLevel === 3) {
                document.getElementById('spell-game-grid').classList.remove('hidden');
                document.getElementById('instruction-box').innerHTML = "‚úçÔ∏è Type the <strong>Name</strong>. The word 'ion' is given!";
                
                const grid = document.getElementById('spell-game-grid');
                grid.innerHTML = "";
                
                currentQuestions.forEach((q, idx) => {
                    const div = document.createElement('div');
                    div.className = 'spelling-card';
                    div.innerHTML = `
                        <div class="symbol-display">${q.s}</div>
                        <div class="spelling-input-container">
                            <input type="text" class="spelling-input" id="input-${idx}" placeholder="e.g. Sodium" oninput="updateBeakerSpelling()">
                            <span class="ion-suffix">ion</span>
                        </div>
                    `;
                    grid.appendChild(div);
                });

            } else {
                document.getElementById('match-game-grid').classList.remove('hidden');
                document.getElementById('instruction-box').innerHTML = "üëá Tap <strong>Symbol</strong> first, then tap <strong>Name</strong>!";
                
                const namesCol = document.getElementById('names-column');
                const symbolsCol = document.getElementById('symbols-column');
                namesCol.innerHTML = "";
                symbolsCol.innerHTML = "";

                const shuffledSymbols = [...currentQuestions].sort(() => Math.random() - 0.5);
                shuffledSymbols.forEach(q => {
                    const div = document.createElement('div');
                    div.className = 'card';
                    div.innerText = q.s; 
                    div.dataset.val = q.s;
                    div.onclick = () => {
                        if(div.parentElement.className.includes('drop-zone')) {
                            document.getElementById('symbols-column').appendChild(div);
                            div.parentElement.classList.remove('filled');
                            updateBeaker();
                            return;
                        }
                        if (selectedSymbolCard) selectedSymbolCard.classList.remove('selected');
                        selectedSymbolCard = div;
                        div.classList.add('selected');
                        div.style.transform = "scale(1.1)";
                        setTimeout(() => div.style.transform = "scale(1)", 150);
                    };
                    symbolsCol.appendChild(div);
                });

                const shuffledNames = [...currentQuestions].sort(() => Math.random() - 0.5);
                shuffledNames.forEach(q => {
                    const div = document.createElement('div');
                    div.className = 'drop-zone';
                    div.innerHTML = `<span>${q.n}</span>`;
                    div.dataset.correctSymbol = q.s;
                    div.onclick = () => {
                        if (selectedSymbolCard) {
                            if (div.querySelector('.card')) {
                                document.getElementById('symbols-column').appendChild(div.querySelector('.card'));
                            }
                            div.appendChild(selectedSymbolCard);
                            selectedSymbolCard.classList.remove('selected');
                            selectedSymbolCard = null;
                            div.classList.add('filled');
                            updateBeaker();
                        }
                    };
                    namesCol.appendChild(div);
                });
            }
        }

        function updateBeaker() {
            const filledCount = document.querySelectorAll('.drop-zone .card').length;
            const percentage = Math.round((filledCount / QUESTIONS_PER_ROUND) * 100);
            document.getElementById('beaker-liquid').style.height = `${percentage}%`;
            document.getElementById('beaker-percent').innerText = `${percentage}%`;
        }
        
        function updateBeakerSpelling() {
            const inputs = document.querySelectorAll('.spelling-input');
            let filled = 0;
            inputs.forEach(inp => { if(inp.value.trim().length > 0) filled++; });
            const percentage = Math.round((filled / QUESTIONS_PER_ROUND) * 100);
            document.getElementById('beaker-liquid').style.height = `${percentage}%`;
            document.getElementById('beaker-percent').innerText = `${percentage}%`;
        }

        function startTimer() {
            timerInterval = setInterval(() => {
                seconds++;
                let m = String(Math.floor(seconds/60)).padStart(2,'0');
                let s = String(seconds%60).padStart(2,'0');
                document.getElementById('display-timer').innerText = `${m}:${s}`;
            }, 1000);
        }

        function checkAnswers() {
            let filledCount = 0;
            if(currentLevel === 3) {
                 const inputs = document.querySelectorAll('.spelling-input');
                 inputs.forEach(inp => { if(inp.value.trim().length > 0) filledCount++; });
            } else {
                 filledCount = document.querySelectorAll('.drop-zone .card').length;
            }

            if (filledCount < QUESTIONS_PER_ROUND) return alert(`Please answer all ${QUESTIONS_PER_ROUND} questions first! üòä`);

            clearInterval(timerInterval);
            let score = 0;
            let resultsText = "";
            let wrongAnswersHTML = "";
            const review = document.getElementById('review-area');
            review.innerHTML = "";

            if (currentLevel === 3) {
                currentQuestions.forEach((q, idx) => {
                    const inputVal = document.getElementById(`input-${idx}`).value.trim();
                    const userGuess = inputVal + " ion";
                    const correctName = q.n;
                    const isCorrect = userGuess.toLowerCase().replace(/\s+/g, ' ') === correctName.toLowerCase().replace(/\s+/g, ' ');
                    
                    if (isCorrect) score++;
                    else {
                        wrongAnswersHTML += `<div class="review-item">‚ùå <strong>Symbol: ${q.s}</strong><br>You typed: ${inputVal}<br><span style="color:#2ecc71">Correct: ${correctName}</span></div>`;
                    }

                    const p = document.createElement('div');
                    p.className = isCorrect ? 'correct' : 'incorrect';
                    p.innerHTML = `${isCorrect ? '‚úÖ' : '‚ùå'} <strong>Symbol: ${q.s}</strong><br>Your Answer: ${inputVal} ion ${!isCorrect ? '<br>Correct: ' + correctName : ''}`;
                    review.appendChild(p);
                    resultsText += `${isCorrect ? 'PASS' : 'FAIL'} | Symbol: ${q.s} | Ans: ${inputVal} ion | Ref: ${correctName}\n`;
                });
            } else {
                const zones = document.querySelectorAll('.drop-zone');
                zones.forEach(zone => {
                    const questionName = zone.querySelector('span').innerText;
                    const userSymbolCard = zone.querySelector('.card');
                    const userSymbol = userSymbolCard.innerText;
                    const correctSymbol = zone.dataset.correctSymbol;

                    const isCorrect = (userSymbol === correctSymbol);
                    if (isCorrect) score++;
                    else {
                        wrongAnswersHTML += `<div class="review-item">‚ùå <strong>${questionName}</strong><br>You matched: ${userSymbol}<br><span style="color:#2ecc71">Correct: ${correctSymbol}</span></div>`;
                    }

                    const p = document.createElement('div');
                    p.className = isCorrect ? 'correct' : 'incorrect';
                    p.innerHTML = `${isCorrect ? '‚úÖ' : '‚ùå'} <strong>${questionName}</strong><br>Your Answer: ${userSymbol} ${!isCorrect ? '(Correct: ' + correctSymbol + ')' : ''}`;
                    review.appendChild(p);
                    resultsText += `${isCorrect ? 'PASS' : 'FAIL'} | Question: ${questionName} | Answer: ${userSymbol}\n`;
                });
            }

            if (score < 10) {
                logAttempt("Fail", `${score}/${QUESTIONS_PER_ROUND}`);
                document.getElementById('modal-msg').innerHTML = `You scored <strong>${score}/${QUESTIONS_PER_ROUND}</strong>.<br>That's below 80%. Let's review before trying again!`;
                document.getElementById('modal-review-list').innerHTML = wrongAnswersHTML;
                document.getElementById('restart-modal').classList.remove('hidden');
                return;
            }

            logAttempt("Pass", `${score}/${QUESTIONS_PER_ROUND}`);
            
            userData.score = score;
            userData.time = document.getElementById('display-timer').innerText;
            userData.rawResults = resultsText;
            userData.level = currentLevel;

            document.getElementById('game-screen').classList.add('hidden');
            document.getElementById('result-screen').classList.remove('hidden');
            document.getElementById('score-display').innerText = `üéâ Score: ${score} / ${QUESTIONS_PER_ROUND}`;

            if (score === QUESTIONS_PER_ROUND) {
                document.getElementById('result-title').innerText = "Good Job!";
                for(let i=0; i<15; i++) setTimeout(spawnEmoji, i * 100);
            } else {
                document.getElementById('result-title').innerText = "Game Results";
            }
        }

        function confirmRestart() {
            document.getElementById('restart-modal').classList.add('hidden');
            document.getElementById('display-attempt').innerText = attemptCount;
            seconds = 0;
            document.getElementById('display-timer').innerText = "00:00";
            
            let pool = (currentLevel === 1) ? [...poolLevel1] : (currentLevel === 2) ? [...poolLevel2] : [...poolLevel3];
            currentQuestions = pool.sort(() => Math.random() - 0.5).slice(0, QUESTIONS_PER_ROUND);
            
            initGame();
            startTimer();
        }

        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            doc.setTextColor(255, 138, 128);
            doc.setFontSize(22);
            doc.text("Ion Master Result", 20, 20);

            doc.setTextColor(60, 60, 60);
            doc.setFontSize(12);
            doc.text(`Student: ${userData.name}`, 20, 35);
            doc.text(`Class: ${userData.class} (${userData.no})`, 20, 42);
            doc.text(`Date: ${userData.date}`, 20, 49);
            
            doc.setFont(undefined, 'bold');
            doc.text("Session History", 20, 60);
            
            const tableBody = sessionHistory.map(log => [
                log.attempt,
                `Level ${log.level}`,
                log.time,
                log.score,
                log.result
            ]);

            doc.autoTable({
                startY: 65,
                head: [['Attempt', 'Level', 'Time', 'Score', 'Status']],
                body: tableBody,
                theme: 'grid',
                headStyles: { fillColor: [255, 183, 77] },
            });

            let finalY = doc.lastAutoTable.finalY + 15;
            
            doc.setFont(undefined, 'bold');
            doc.text(`Final Detailed Analysis (Incorrect Only - Level ${userData.level})`, 20, finalY);
            doc.setFont(undefined, 'normal');
            
            let y = finalY + 10;
            const lines = userData.rawResults.split('\n');
            let hasErrors = false;
            
            lines.forEach(line => {
                if (!line) return;
                // FILTER: Only show lines starting with FAIL
                if (!line.startsWith('FAIL')) return;

                hasErrors = true;
                if (y > 270) { doc.addPage(); y = 20; }
                
                doc.setTextColor(255, 138, 128); // Pop Pink for Fail
                doc.text(line, 20, y);
                y += 8;
            });

            if (!hasErrors) {
                doc.setTextColor(77, 182, 172); // Green
                doc.text("Perfect Score! No incorrect answers to display.", 20, y);
            }

            doc.save(`Result_${userData.name}_L${userData.level}.pdf`);
        }

        function spawnEmoji() {
            const ems = ['üéâ','‚≠ê','üç¨','üéà','üç≠'];
            const d = document.createElement('div');
            d.id = 'emoji-pop';
            d.innerText = ems[Math.floor(Math.random()*ems.length)];
            d.style.left = Math.random() * 80 + 10 + 'vw';
            d.style.top = '80vh';
            document.body.appendChild(d);
            setTimeout(() => d.remove(), 2000);
        }
    </script>
</body>
</html>
